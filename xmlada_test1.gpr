with "../../Ada/xmlada/shared.gpr";

project xmlada_test1 is

   for Languages use ("Ada");
   for Source_Dirs use ("./**");
   for Main use ("xmlada_test1.adb");

   package Pretty_Printer is
      for Default_Switches ("ada") use ("-cl3", "-M135", "--no-separate-is", "--no-separate-loop-then", "--use-on-new-line", "--separate-stmt-name");
   end Pretty_Printer;

   package Builder is
      for Default_Switches ("ada") use ("-s", "-g", "-C");
   end Builder;

   package Compiler is
      for Default_Switches ("ada") use ("-gnatVa", "-gnatwa", "-gnato", "-fstack-check", "-gnatE", "-gnatf", "-g", "-gnata");
   end Compiler;

   package Binder is
      for Default_Switches ("ada") use ("-E");
   end Binder;

   package Linker is
      for Default_Switches ("ada") use ("-g");
   end Linker;

   for Source_Files use ("xmlada_test1.adb");

end xmlada_test1;